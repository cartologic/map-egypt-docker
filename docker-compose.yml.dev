version: '3'
services:
  db:
    image: postgres:12.3
    environment:
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: map-egypt@postgres
      POSTGRES_DB: map_egypt
    ports:
      - "5004:5432"
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U postgres -h localhost"]
      interval: 180s
      timeout: 5s
      retries: 5
    volumes:
      - ./pgdata:/var/lib/postgresql/data
    restart: unless-stopped
  site:
    build:
      context: ./map-egypt.github.io/.
      dockerfile: Dockerfile.dev
    ports:
      - "5000:3000"
  api:
    build: ./api/.
    env_file:
      - ./api/.env
    ports:
      - "5001:5000"
    volumes:
      - uploaded:/app/
      
  admin:
    build: 
      context: ./admin/.
      dockerfile: Dockerfile.dev
    ports:
      - "5002:3000"
volumes:
  uploaded:
